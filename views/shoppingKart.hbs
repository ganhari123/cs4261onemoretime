<div style="top:30%; position:fixed; width:100%">
          <h1 style="text-align: center; margin-bottom: 2%;">Grocery List</h1>
<!--        <div style="position:relative; left: 10%; margin-bottom: 1%">-->
          <form style="margin:0 auto; width:75%" method="POST" action="/addItem">
              <div class="input-group text">
                <input style="width:50%" name="ItemName" type="text" class="form-control" placeholder="Item Name" required>
                <input style="width:50%" name="Quantity" type="number" class="form-control" placeholder="Quantity" required>
                <span class="input-group-btn">
                    <button class="btn btn-secondary" type="submit" value="Add to list">Add</button>
                </span>
              </div>
          </form>
<!--        </div>-->
