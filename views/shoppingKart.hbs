<div class="container">
<ul style="margin-top: 1%" class="nav nav-tabs">
        <li style="width:50%; text-align:center" role="button" class="active text"><a style="color: black" data-toggle="tab" href="#byItem">By Item</a></li>
        <li style="width:50%; text-align:center" class="text" role="button"><a style="color: black" data-toggle="tab" href="#byRecipe">By Recipe</a></li>
    </ul>
</div>

<div class="tab-content">
    <div id="byItem" class="tab-pane active">
        <h1 style="text-align: center; margin-bottom: 2%;" class="text">Grocery List by Item</h1>
        <form style="margin:0 auto; width:80%" method="POST" action="/addItem">
          <div class="input-group text">
            <input style="width:50%" name="ItemName" type="text" class="form-control" placeholder="Item Name" required>
            <input style="width:25%" name="Quantity" type="number" step="0.01" class="form-control" placeholder="Quantity" required>
              <input style="width:25%" name="Unit" type="text" class="form-control" placeholder="Units">
            <span class="input-group-btn">
                <button class="btn btn-success" type="submit" value="Add to list"><i class="fa fa-plus" aria-hidden="true"></i></button>
            </span>
          </div>
        </form>
<!--        <form style="position:relative; margin:auto; width:75%" method="post" action="">-->
        <form style="position:relative; left: 5%; width:80%" method="post" action="/addDeleteItem">
            <div style="margin: 1% auto; text-align:center;margin-top:2%">
                <button class="btn btn-danger" type="submit" name="collected" value="Delete"><i class="fa fa-times" aria-hidden="true"></i></button>
                <button class="btn btn-primary" type="submit" name="collected" value="Collect"><i class="fa fa-check" aria-hidden="true"></i></button>
            </div>
            <div class="table">
            <table class="table" >
                <thead>
                <tr>
                    <th class="td text"></th>
                    <th class="td text">Item</th>
                    <th class="td text">Quantity</th>
                    <th class="td text">Units</th>
                    <th class="td text">Collected?</th>
                </tr>
                </thead>
                <tbody>
                    <ul>
                        {{#each shoppingList}}
                        <tr>
                            <td name="itemName" value={{this.ItemName}} class="td text"><input name="item" value="{{this.ItemName}}" type="checkbox"></td>
                            <td class="td text" style="word-wrap: break-word;">{{this.ItemName}}</td>
                            <td class="td text">{{this.Quantity}}</td>
                            <td class="td text">{{this.Unit}}</td>
                                <td class="td">
                                    {{#if this.isCollected}}
                                       <img style="width=50%" src="/img/success.svg">
                                    {{/if}}
                                </td>
                            
                        </tr>
                        {{/each}}
                        
                    </ul>
                </tbody>
            </table>
            </div>
        </form>
    </div>
    <div id="byRecipe" class="tab-pane">
        <ul class="recipe_list">
		  {{#each shoppingList}}
<!--		Code adjusted from http://bootsnipp.com/search?q=card&page=2 -->
<!--            console.log({{this.recipe.title}});-->
            <div class="container card">
            <div class="row">
                <div class="col-md-4 col-sm-6">
                    <div class="card-style">
                        <div class="media">
                            <div class="media-left">
                                <img class="media-object img-thumbnail card-img" id="recipePic" src="{{this.recipe.image_url}}">
                            </div>

                            <div class="media-body">
                                <h5 id="recipeTitle" onclick="getRecipe('{{this.f2f_url}}')" class="media-heading text">{{this.title}}</h5>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

		  {{/each}}
		</ul>
    </div>
</div>