<div>
        <h1 class="pageTitle">Search for Recipes</h1>
        <form style="margin:0 auto; width:62%" method="get" action="/searchRecipe">
          <input type="text" placeholder="item search" name="query" required>
            <button style="margin: 2%" class="btn text" type="submit" value="Search Recipe">Search for Recipe</button>
        </form>
        <ul class="recipe_list">
		  {{#each recipe}}
<!--		Code adjusted from http://bootsnipp.com/search?q=card&page=2 -->
            <div class="container card">
            <div class="row">
                <div class="col-md-4 col-sm-6">
                    <div class="card-style">
                        <div class="media">
                            <div class="media-left">
                                <img class="media-object img-thumbnail card-img" id="recipePic" src="{{this.image_url}}">
                            </div>

                            <div class="media-body">
                                <a href="#"><h5 class="media-heading text">{{this.title}}</h5></a>
                                <div style="margin: 2%" class="btn btn-sm btn-default pull-right btn-part text">Add to Grocery List</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

		  {{/each}}
		</ul>
    <ul style="margin: 0 auto; width: 50%; display: block" class="pagination">
    <li>
      <a href="#" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    <li><a href="#">1</a></li>
    <li><a href="#">2</a></li>
    <li><a href="#">3</a></li>
    <li><a href="#">4</a></li>
    <li><a href="#">5</a></li>
    <li>
      <a href="#" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</div>
