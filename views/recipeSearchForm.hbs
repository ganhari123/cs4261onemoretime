<div style="top:30%; position:fixed; left: 25%">
        <h1 style="margin-botton:2%">Search for Recipes</h1>
        <form method="get" action="/searchRecipe">
          <input type="text" placeholder="item search" name="query" required>
          <input type="submit" value="Search Recipe">
        </form>
        <ul class="recipe_list">
		  {{#each recipe}}
		    <li>{{this.title}}</li>
		  {{/each}}
		</ul>
</div>
