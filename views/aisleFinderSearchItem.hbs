
<div>
        <h1 class="pageTitle">Aisle Finder</h1>
        <form style="margin:2% auto; width:80%" method="get" action="/searchForItem/{{this.storeID}}/{{this.storename}}">
            <div class="input-group text">
                <input type="text" class="form-control" placeholder="Search by Item Name" name="query" required>
                <span class="input-group-btn">
                    <button class="btn btn-secondary" type="submit" value="Search Item">Search</button>
                </span>
            </div>
            <div class="chip">
                <a href="/aisleFinderSearchStore"><p class="text">Store: {{this.storename}}  &times;</p></a>
<!--                <span class="closebtn" onclick="this.parentElement.style.display='none'">&times;</span>-->
            </div>
        </form>
        <ul class="recipe_list">
		  {{#each item}}
<!--            console.log({{this}})-->
<!--		Code adjusted from http://bootsnipp.com/search?q=card&page=2 -->
            <div class="container card text">
            <div class="row">
                <div class="col-md-4 col-sm-6">
                    <div class="card-style">
                        <div class="media">
                             <div class="media-left">
                                 <img class="media-object img-thumbnail card-img" id="recipePic" src="{{this.ItemImage}}">
                            </div>
                            <div class="media-body">
                                <h5><b>{{this.Itemname}}</b></h5>
                                <p>Item Category: {{this.ItemCategory}}</p>
                                <p>{{this.AisleNumber}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

		  {{/each}}
		</ul>
</div>